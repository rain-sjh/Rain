{% extends 'model.twig' %}

{% block head %}添加角色{% endblock %}

{% block body %}
    <div class="layui-form-item">
        <label for="name" class="layui-form-label">名称</label>
        <div class="layui-input-inline">
            <input id="name" type="text" name="name" lay-verify="required" placeholder="请输入昵称"
                   autocomplete="off" class="layui-input" lay-reqText="请输入昵称">
        </div>
    </div>
    <div class="layui-form-item">
        <label for="code" class="layui-form-label">代码</label>
        <div class="layui-input-inline">
            <input id="code" type="text" name="code" lay-verify="required" placeholder="请输入唯一代码"
                   autocomplete="off" class="layui-input" lay-reqText="请输入唯一代码" style="text-transform: uppercase;" value="ROLE_" onkeyup="value=value.replace(/[^a-zA-Z_]/g,'')">
            <div class="layui-form-mid layui-word-aux">必须以ROLE_开头,内容必须为大写英文或以"_"间隔.</div>
        </div>
    </div>

{% endblock %}

{% block footer %}
    <button type="button" lay-submit lay-filter="addRole" class="layui-btn layui-btn-sm">添加</button>
{% endblock %}

{% block js %}
    <script>
        $.Form('addRole', '{{ url('role/add') }}',function () {
            $.Url();
        });
    </script>
{% endblock %}
