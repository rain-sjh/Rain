{% extends 'layout.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ load('rain/css/login.css') }}">
{% endblock %}

{% block head %}
    <img class="layui-img-bg" lay-src="{{ load('rain/image/login_bg.jpg') }}" alt="" width="100%" height="100%" src="">
    <canvas id="canvas"></canvas>
{% endblock %}

{% block main %}
    <div class="layui-fluid">
        <div class="tpl-user-modal-wrapper">
            <div class="tpl-modal">
                <div class="tpl-modal-item">
                    <div class="left-form-item">
                        <form class="layui-form" method="post" autocomplete="off">
                            <a href="{{ url('/') }}">
                                <h2 class="sub-title">雨点 管理系统</h2>
                            </a>
                            <div class="group">
                                <label for="username"><i class="layui-icon">&#xe66f;</i></label>
                                <input id="username" type="text" name="username" class="inp" placeholder="请输入用户名" lay-verify="required" lay-reqText="请输入用户名">
                            </div>
                            <div class="group">
                                <label for="password"><i class="layui-icon">&#xe673;</i></label>
                                <input id="password" type="password" name="password" class="inp" placeholder="请输入密码" lay-verify="required" lay-reqText="请输入密码">
                            </div>
                            <div class="group">
                                <label for="code"><i class="layui-icon">&#xe679;</i></label>
                                <input id="code" type="text" name="code" class="inp" placeholder="请输入验证码" lay-verify="required" lay-reqText="请输入验证码">
                                <img src="{{ captcha_src() }}" class="code-img" alt="验证码" onclick='this.src="{{ captcha_src() }}?t="+Math.random();'>
                            </div>
                            <div class="group sm-font">
                                <label for="remember">
                                    <input class="layui-hide" type="checkbox" id="remember" lay-ignore>
                                    <span class="option">
                                        <span class="option-item">
                                            <span class="opSpan"></span>
                                        </span>
                                    </span>
                                    <span class="check-text">记住我</span>
                                </label>
                            </div>
                            <div class="group">
                                <button type="button" class="submit" lay-submit lay-filter="login">登陆</button>
                            </div>
                        </form>
                    </div>
                    <div class="right-bg-item">
                        <img lay-src="{{ load('rain/image/right-bg.png') }}" alt="右侧背景" src="">
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}

{% block js %}
{#    <script src="{{ load('raindrop/config.js') }}"></script>#}
    <script>
        $.Form('login','', function (res) {
            $.Url();
        });
    </script>
{% endblock %}